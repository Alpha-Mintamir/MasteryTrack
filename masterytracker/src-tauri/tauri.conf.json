{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "MasteryTrack",
  "version": "0.1.0",
  "identifier": "com.mastery.track",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "10,000-Hour Mastery Tracker",
        "width": 1100,
        "height": 720,
        "minWidth": 960,
        "minHeight": 600,
        "decorations": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
